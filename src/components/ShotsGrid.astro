---
import { mockShots } from '../data/shots.js';
import ShotCard from './ShotCard.astro';

const shots = mockShots;
---

<section class="shots-grid">
  <div class="container mx-auto px-4 md:px-6">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      {shots.map((shot) => (
        <ShotCard shot={shot} />
      ))}
    </div>
  </div>
</section>

<style>
  .shots-grid {
    padding: 2rem 0;
    background-color: #f8f8f8;
  }

  @media (min-width: 1536px) {
    .container {
      max-width: 1504px;
    }
  }
</style>
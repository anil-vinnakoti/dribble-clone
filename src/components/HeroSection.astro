<script>
  document.addEventListener('DOMContentLoaded', () => {
    const popularButton = document.getElementById('popular-button');
    const popularDropdown = document.getElementById('popular-dropdown');
    const filtersButton = document.querySelector('button:has(svg path[d="M2 4H14"])');
    const filtersPanel = document.getElementById('filters-panel');
    const timeframeButton = document.getElementById('timeframe-button');
    const timeframeDropdown = document.getElementById('timeframe-dropdown');
    const scrollContainer = document.querySelector('.overflow-x-auto');
    const leftArrow = document.getElementById('scroll-left');
    const rightArrow = document.getElementById('scroll-right');
    const scrollAmount = 200;

    if (popularButton && popularDropdown) {
      popularButton.addEventListener('click', () => {
        popularDropdown.classList.toggle('hidden');
      });

      // Close dropdown when clicking outside
      document.addEventListener('click', (event: MouseEvent) => {
        const target = event.target as Node;
        if (!popularButton.contains(target) && !popularDropdown.contains(target)) {
          popularDropdown.classList.add('hidden');
        }
      });
    }

    if (filtersButton && filtersPanel) {
      filtersButton.addEventListener('click', () => {
        const isExpanded = !filtersPanel.classList.contains('hidden');
        
        if (isExpanded) {
          // Collapse
          filtersPanel.style.maxHeight = filtersPanel.scrollHeight + 'px';
          requestAnimationFrame(() => {
            filtersPanel.style.maxHeight = '0px';
            setTimeout(() => {
              filtersPanel.classList.add('hidden');
            }, 300);
          });
        } else {
          // Expand
          filtersPanel.classList.remove('hidden');
          filtersPanel.style.maxHeight = '0px';
          requestAnimationFrame(() => {
            filtersPanel.style.maxHeight = filtersPanel.scrollHeight + 'px';
          });
        }
      });

      // Close filters panel when clicking outside
      document.addEventListener('click', (event: MouseEvent) => {
        const target = event.target as Node;
        if (filtersButton && filtersPanel && !filtersButton.contains(target) && !filtersPanel.contains(target) && !filtersPanel.classList.contains('hidden')) {
          filtersPanel.style.maxHeight = filtersPanel.scrollHeight + 'px';
          requestAnimationFrame(() => {
            filtersPanel.style.maxHeight = '0px';
            setTimeout(() => {
              filtersPanel.classList.add('hidden');
            }, 300);
          });
        }
      });
    }

    if (timeframeButton && timeframeDropdown) {
      timeframeButton.addEventListener('click', (e) => {
        e.stopPropagation();
        timeframeDropdown.classList.toggle('hidden');
      });

      // Update selected timeframe
      timeframeDropdown.querySelectorAll('button').forEach(button => {
        button.addEventListener('click', () => {
          const buttonText = button.textContent?.trim() || 'Now';
          const spanElement = timeframeButton.querySelector('span');
          if (spanElement) {
            spanElement.textContent = buttonText;
          }
          timeframeDropdown.classList.add('hidden');
        });
      });

      // Close dropdown when clicking outside
      document.addEventListener('click', (event: MouseEvent) => {
        const target = event.target as Node;
        if (!timeframeButton.contains(target) && !timeframeDropdown.contains(target)) {
          timeframeDropdown.classList.add('hidden');
        }
      });
    }

    // Scroll functionality
    if (scrollContainer && leftArrow && rightArrow) {
      leftArrow.addEventListener('click', () => {
        scrollContainer.scrollBy({
          left: -scrollAmount,
          behavior: 'smooth'
        });
      });

      rightArrow.addEventListener('click', () => {
        scrollContainer.scrollBy({
          left: scrollAmount,
          behavior: 'smooth'
        });
      });

      // Show/hide arrows based on scroll position
      scrollContainer.addEventListener('scroll', () => {
        const isAtStart = scrollContainer.scrollLeft === 0;
        const isAtEnd = scrollContainer.scrollLeft + scrollContainer.clientWidth >= scrollContainer.scrollWidth;
        
        leftArrow.hidden = isAtStart ? true: false;
        rightArrow.hidden = isAtEnd ? true: false;
      });
    }
  });
</script>

